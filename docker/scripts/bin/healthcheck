#! /bin/bash

SERVICES=(apache2)

ret=0
for service in "${SERVICES[@]}"; do
    status=$(service "$service" status | awk '{print $4}')
    if [ "$status" = "running" ]; then
        printf "%s ok | " "$service"
    else
        printf "%s %s | " "$service" "$status"
        ret=1
    fi
done

BASEURL="http://localhost/OJ"
if curl --silent --fail "$BASEURL/api" >/dev/null; then
    printf "http ok"
else
    printf "http error"
    ret=1
fi

exit $ret
